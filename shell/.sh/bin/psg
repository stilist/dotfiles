#!/usr/bin/env bash

set -euo pipefail
IFS=$'\n\t'

###
# `psg`
#
# Search the list of running processes.
#
# @example
#   psg ruby
###

echo '  PID CMD'
# a: show processes from all users
# o: select output columns
# x: include non-interactive processes
ps -ax -o pid,command | grep --ignore-case "$1" | egrep --invert-match "($0|grep --ignore-case $1)"
