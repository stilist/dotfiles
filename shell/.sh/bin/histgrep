#!/usr/bin/env bash

set -euo pipefail
IFS=$'\n\t'

###
# `histgrep`
#
# Search the entire history dataset: the current buffer (`history`) and the
# files created by `session/history.sh`.
#
# @example
#   histgrep ssh
#
# @see https://twitter.com/michaelhoffman/status/639226401015525376
###

grep --recursive --ignore-case -S "$@" "$HOME/.history"
history | grep "$@"
